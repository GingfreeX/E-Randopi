{% extends '@Main/Default/base.html.twig' %}
{% block body %}
        <link href='https://fonts.googleapis.com/css?family=Lato:400,700,400italic|Yanone+Kaffeesatz' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('Shop/item/style.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('Shop/item/default.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('Shop/item/jquery.fancybox.css') }}" type="text/css">
    <body>
    <div id="itempage">
        <section id="itembody">
            <div class="wrapp group">
                <div class="post group">
                    <div class="box-hold group">
                        <article class="entry box format-standard">
                            <div class="entry-intro">
                                <h1>{{ itemm.titre }}</h1><span class="entry-meta">Posted by <strong>{{ user.username }}</strong>, at <time>{{ itemm.date|date('Y-m-d H:i:s') }}</time></span> <a class="single-heart-this" href="#" title="Love this.">
                                    <span class="heart-icon"></span><span class="heart-no">{{ itemm.rating }}</span></a>
                            </div><!-- .entry-intro -->

                            <figure class="entry-image"><a href="{{app.request.basepath}}/uploads/{{ itemm.imageName }}" data-lightbox="fancybox"><img src="{{app.request.basepath}}/uploads/{{ itemm.imageName }}" alt=""></a></figure>

                            <div class="entry-content">
                            <p>{{ itemm.description }}</p>
                            </div>

                            <div class="social-share"></div>
                        </article>
                    </div><!-- .box-hold -->

                    <div class="box-hold">
                        <div class="box comment-form">
                            <div class="box-content">
                                <h3>Post your comment</h3>

                                <form id="commentform" class="group" action="/" style="position: relative;">
                                    <fieldset>
                                        <p>
                                            <label id="spanLabel3" class="fLabel" style="font-family: Lato, 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size: 12px; font-style: normal; font-weight: normal; text-shadow: none; line-height: 16.2px; position: absolute; top: 0px; left: 0px; color: rgb(115, 115, 115); -webkit-user-select: none; cursor: text; z-index: 999;">Your Comment</label><textarea cols="30" rows="4" title="Your Comment"></textarea></p>
                                    </fieldset>
                                    <button type="submit">Submit</button>
                                </form>
                            </div>
                        </div>

                        <div class="box post-comments">
                            <div class="box-content">
                                <h3>42 Comments</h3>

                                <ol id="comment-list" class="group">
                                    <li class="comment">
                                        <span class="comment-meta">Posted by <strong>vmasto</strong>, at <time datetime="2012-08-07">July 7th, 2012</time> &mdash; <a class="comment-reply-link" href="#commentform">Reply</a></span>

                                        <div class="comment-text group">
                                            <img class="avatar" src="{{ asset('images/ging.jpg') }}" alt="">

                                            <div class="comment-copy">
                                                <p>First, I believe that this nation should commit itself to achieving the goal, before this decade is out, of landing a man on the moon and returning him safely to the earth. No single space project in this period will be more impressive to mankind, or more important for the long-range exploration.</p>
                                            </div>
                                        </div>
                                    </li>
                                </ol><a class="load-more-comments" href="#">View 38 More Comments...</a>
                            </div>
                        </div>
                    </div><!-- .box-hold -->
                </div><!-- .inner-container -->
            </div><!-- .wrap < #main -->
        </section><!--  #main -->
    </div><!-- #page -->
    <script src="{{ asset('Shop/item/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Shop/item/jquery.isotope.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Shop/item/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Shop/item/jquery.flexslider-min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('Shop/item/jquery.formLabels1.0.js') }}" type="text/javascript"></script>
    <script defer src="{{ asset('Shop/item/scripts.js') }}" type="text/javascript"></script>
    </body>
{% endblock %}
