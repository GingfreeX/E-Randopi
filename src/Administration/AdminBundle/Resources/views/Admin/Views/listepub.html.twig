{% extends '@AdministrationAdmin/Admin/Layout/index.html.twig' %}
{% block style %}
    {{ parent() }}
    <link href="{{ asset('Admin/assets/plugins/DataTables/css/data-table.css') }}"rel="stylesheet" />
{% endblock %}
{% block content %}
<div id="content" class="content">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li><a href="{{ path('administration_admin_homepage') }}">Acceuil</a></li>
        <li class="active">Publications</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">Liste des produits</h1>
    <!-- end page-header -->

    <!-- begin row -->
    <div class="row">
        <!-- begin col-10 -->
        <div class="col-md-10">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Liste des produits</h4>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="data-table" class="table table-striped table-bordered">
                            <thead>
                            <tr>

                                <th>item</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for i in pub %}
                                <tr>

                                    <td>
                                        {{ i.titre }}
                                    </td>
                                    <td>
                                        <img  src="{{app.request.basepath}}/uploads/{{ i.imageName }}"
                                                width="100px" height="100px">

                                    </td>
                                    <td>
                                        <a href="{{ path('deletepro',{'id':i.id}) }}">supprimer un produit</a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-10 -->
    </div>
    <!-- end row -->
</div>
{% endblock %}

{% block javascripts %}
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="{{ asset('Admin/assets/plugins/DataTables/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('Admin/assets/plugins/DataTables/js/dataTables.colReorder.js') }}"></script>
    <script src="{{ asset('Admin/assets/js/table-manage-colreorder.demo.min.js') }}"></script>
    <script src="{{ asset('Admin/assets/js/apps.min.js') }}"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->

    <script>
        $(document).ready(function() {
            App.init();
            TableManageColReorder.init();
        });
    </script>
{% endblock %}